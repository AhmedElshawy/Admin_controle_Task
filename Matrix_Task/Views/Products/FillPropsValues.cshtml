@model Core.Models.ProductPropValues


<h1>Create</h1>

<h4>ProductPropValues</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FillPropsValues">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.categoryProp.Length)
            {
                <div class="form-group">
                <label asp-for="Length" class="control-label"></label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
                </div>
            }
            @if (ViewBag.categoryProp.Height)
            {
                <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
                </div>
            }
            @if (ViewBag.categoryProp.ScreenReslution)
            {
                <div class="form-group">
                <label asp-for="ScreenReslution" class="control-label"></label>
                <input asp-for="ScreenReslution" class="form-control" />
                <span asp-validation-for="ScreenReslution" class="text-danger"></span>
                </div>  
            }
            
            @if (ViewBag.categoryProp.Color)
            {
                <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
                </div>  
            } 
            
            @if (ViewBag.categoryProp.Weight)
            {
                <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
                </div>  
            }  
            @if (ViewBag.categoryProp.Volume)
            {
                <div class="form-group">
                <label asp-for="Volume" class="control-label"></label>
                <input asp-for="Volume" class="form-control" />
                <span asp-validation-for="Volume" class="text-danger"></span>
                </div>  
            }  
            @if (ViewBag.categoryProp.SkinType)
            {
                <div class="form-group">
                <label asp-for="SkinType" class="control-label"></label>
                <input asp-for="SkinType" class="form-control" />
                <span asp-validation-for="SkinType" class="text-danger"></span>
                </div>  
            }  
            @if (ViewBag.categoryProp.BrandName)
            {
                <div class="form-group">
                <label asp-for="BrandName" class="control-label"></label>
                <input asp-for="BrandName" class="form-control" />
                <span asp-validation-for="BrandName" class="text-danger"></span>
                </div>  
            }  
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
